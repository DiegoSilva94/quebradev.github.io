<section class="podcasts-wrapper">
    <h1 class="page-title">Epis√≥dios</h1>

    <div class="row">
        <% page.posts.each(function(post){ %>
            <article class="col-12 col-lg-6">
                <div class="podcast-item row">
                    <div class="col-12">
                        <a href="<%- url_for(post.path) %>" title="<%= post.title %>">
                            <h1 class="podcast-title"><%= post.title %></h1>
                        </a>
                    </div>
                    <a href="<%- url_for(post.path) %>" title="<%= post.title %>" class="podcast-cover col-12 col-md-5">
                        <img src="<%= post.media %>" alt="<%= post.title %> Cover" class="col-12">
                    </a>
                    <div class="podcast-body col-12 col-md-6">
                        <a href="<%- url_for(post.path) %>" title="<%= post.title %>"><p class="podcast-description"><%= post.description %></p></a>
                        <%- partial('_partial/date', {post: post}) %>
                    </div>
                </div>
            </article>
        <% }) %>
    </div>
</section>
<%- partial('pagination', {type: 'page'}) %>
